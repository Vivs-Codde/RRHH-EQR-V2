{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Usuarios",
        "description": "API para gestión de usuarios del sistema RRHH",
        "contact": {
            "name": "Administrador del Sistema",
            "email": "admin@example.com"
        },
        "license": {
            "name": "MIT",
